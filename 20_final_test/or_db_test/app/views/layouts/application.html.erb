<!DOCTYPE html>
<html>
<head>
  <title>OrDbTest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  

<div class="header">
<% if current_user %>
    You are currently logged in as <%= current_user.name %> | <%= link_to 'Logout', '/logout', class: 'btn btn-default' %>
  <% else %>
    You are not logged in | <%= link_to 'Login', '/login' , class: 'btn btb-default'%>
  <% end %>

  <% if flash[:message] %>
    <b><%= flash[:message] %></b>
  <% end %>

</div> <!--end header-->

<div class = "container">

  <h2>Commercial Schedule & Cost Tracker</h2>

  <%= yield %>

  <footer><a href="/" class="btn btn-default btn-lg"> Home </a></footer>

</div>
</body>
</html>
