<h1>Signup</h1>

<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br><br>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <br><br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br><br>

  <%= f.collection_select :company_id, Company.all, :id, :name %>
  <br><br>

  <%= f.submit 'Signup' %>

<% end %>