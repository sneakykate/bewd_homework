<h1>Add a Book</h1>

<%= form_for @book do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br><br>
  <%= f.label :author %>
  <%= collection_select(:book, :author_id, @author.all, :id, :authorname, prompt: true) %> <button href="<%new_author_path%>">Add an Author</button>

  <br><br>
  
  <%= f.submit 'Submit Book' %>

<% end %>