<div class="container">

	<div class="dogprofiles">
		<ul>
			<% @dogs.each do |m| %>
			<li>
			<a href="/dogs/<%= m.id %>"> <%= m.name %> <img src="<%=m.img_url%>" width="200px">  </a>
			</li>
		</ul>
			<% end %>
	</div>

	<div class="dogform">
		<%= form_for @dog do |f| %>
		Name
		<%= f.text_field :name %> </br>
		Breed
		<%= f.text_field :breed %> </br>
		Age
		<%= f.text_field :age %> </br>
		Picture URL 
		<%= f.text_field :img_url %> </br>
		<%= select_tag(:gender, options_for_select([["Male", 1], ["Female", 2]]))%>
		<%= f.submit "Add a dog" %>
		<% end %>
	</div>
</div>